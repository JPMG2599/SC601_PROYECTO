@model SC601_V1.Models.CategoriaModel
@{
    ViewBag.Title = "AgregarCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-7">

        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear categoria</h3></div>
            <div class="card-body">
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-warning msjCentrado">
                        @ViewBag.Mensaje
                    </div>
                }

                @using (Html.BeginForm("AgregarCategoria", "Categoria", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <div class="form-group mb-3">
                        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control form-control-user", @placeholder = "Nombre", @Required = "true" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control form-control-user", @placeholder = "Descripción", @Required = "true", @rows = 5, @maxLength = "255" })
                    </div>

                    <div class="form-group mb-3">
                        <input type="file" name="ImagenCategoria" class="form-control form-control-user" accept="image/*" required>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="submit" value="Procesar" class="btn btn-primary" />
                        <a href="@Request.UrlReferrer" class="btn btn-secondary">Cancelar</a>
                    </div>

                }

            </div>
        </div>
        </div>
        </div>

