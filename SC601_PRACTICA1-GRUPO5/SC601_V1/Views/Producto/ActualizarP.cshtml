@model SC601_V1.Models.ProductoModel

@{
    ViewBag.Title = "Actualizar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="row justify-content-center">
    <div class="col-lg-7">

        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Actualizar Producto</h3></div>
            <div class="card-body">
                @using (Html.BeginForm("ActualizarP", "Producto", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.ID_Producto)
                    @Html.HiddenFor(x => x.Imagen, new { @class = "form-control form-control-user" })

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Ingrese nombre del producto", @Required = "true" })


                        @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })

                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Ingrese descripcion", @Required = "true" })

                        @Html.LabelFor(model => model.Descripcion, new { @class = "form-label" })
                    </div>

                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", @placeholder = "Ingrese precio", @Required = "true" })
                        @Html.LabelFor(model => model.Precio, new { @class = "form-label" })
                    </div>


                    <div class="form-floating mb-3">
                        @Html.DropDownListFor(model => model.ID_Categoria, new List<SelectListItem> {
                            new SelectListItem { Text = "Seleccione una categoria...", Value = "", Disabled = true, Selected = true }
                        }.Concat((IEnumerable<SelectListItem>)ViewBag.Categoria),
                             new { @class = "form-select", @required = "true" })

                        <label for="ID_Categoria">Categoria</label>
                    </div>


                    <div class="form-group mb-3">

                        <input type="file" name="Imagen" class="form-control form-control-user" accept="image/*" />
                    </div>

                    <div style="width: 200px">
                        <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                        <a href="@Request.UrlReferrer" class="btn btn-secondary">Cancelar</a>
                    </div>

                }

            </div>
        </div>
    </div>
</div>