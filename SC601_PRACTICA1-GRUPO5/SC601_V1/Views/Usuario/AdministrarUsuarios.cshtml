@model IEnumerable<SC601_V1.BaseDatos.SP_ListarUsuarios_Result>

@{
    ViewBag.Title = "Administrar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Administración de Usuarios</h2>
    <div class="card">
        <div class="card-header"><i class="fas fa-table me-1"></i> Lista de Usuarios</div>
        <div class="card-body">

            <table id="datatablesSimple" class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Cédula</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Cedula</td>
                            <td>@item.Correo</td>
                            <td>@item.Nombre_rol</td>
                            <td><a href="@Url.Action("ActualizarUsuario", "Usuario", new {q = item.Id_Usuario})"><i class="fa fa-edit"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<script src="~/Template/js/jquery.min.js"></script>
<script>

    $(document).ready(function () {

        var table = new DataTable('#datatablesSimple', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
            },
            columnDefs: [
                { "className": "dt-left", "targets": "_all" }
            ]
        });

    });

</script>
