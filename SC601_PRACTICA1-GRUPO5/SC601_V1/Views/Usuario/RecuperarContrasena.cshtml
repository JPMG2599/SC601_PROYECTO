@model SC601_V1.Models.UsuarioModel

@{
    ViewBag.Title = "RecuperarContrasena";
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <!-- Titulo del formulario -->
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Recuperar Contraseña</h3></div>

            <div class="card-body">
                <div class="small mb-3 text-muted">Ingresa tu correo electrónico y te enviaremos un link para restablecerla.</div>

                <!-- Inicio de Formulario -->
                @using (Html.BeginForm("RecuperarContrasena", "Usuario"))
                {
                    <!-- Mensaje de Error en caso que exista -->
                    if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-warning">
                            @ViewBag.Error
                        </div>
                    }

                    <!-- Input Correo -->
                    <div class="form-floating mb-3">
                        @Html.TextBoxFor(x => x.Correo, new { @class = "form-control", @placeholder = "name@example.com", @Required = "true", @type = "email" })
                        @Html.LabelFor(x => x.Correo, new { @class = "form-label" })
                    </div>

                    <!-- Botón de Restablecer -->
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="@Url.Action("IniciarSesion", "Usuario")">Volver al Incio Sesión</a>
                        <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
                    </div>
                }
                <!-- Fin  de Formulario -->

            </div>
            <div class="card-footer text-center py-3">
                <div class="small"><a href="@Url.Action("RegistrarUsuario", "Usuario")">¿Necesitas una cuenta? Regístrate!</a></div>
            </div>
        </div>
    </div>
</div>